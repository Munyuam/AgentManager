<div>
  <div class="login-container">
    <div class="role-selection">
      <button class="role-option active" data-role="manager">Manager</button>
      <button class="role-option" data-role="agent">Agent</button>
    </div>

    <form id="manager-login" class="login-type" style="display:block;">
      <div class="form-group">
        <label for="username">Username</label>
        <i class='bx bx-user'></i>
        <input type="text" id="username" name="username" placeholder="Enter your username" required>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <i class='bx bx-lock-alt'></i>
        <input type="password" id="password" name="password" placeholder="Enter your password" required>
      </div>
      <button type="submit" id="submit-manager-login" class="login-btn">Login</button>
    </form>

    <form id="agent-login" class="login-type" style="display:none;">
      <div class="form-group">
        <label for="agentCode">Agent Code</label>
        <i class='bx bx-id-card'></i>
        <input type="number" id="agentCode" name="agentCode" min="4000" max="5000" placeholder="Enter your Agent Code" required>
      </div>
      <div class="form-group">
        <label for="agentPassword">Password</label>
        <i class='bx bx-lock-alt'></i>
        <input type="password" id="agentPassword" name="agentPassword" placeholder="Enter your password" required>
      </div>
      <button type="submit" id="submit-agent-login" class="login-btn">Login</button>
    </form>
  </div>
</div>
